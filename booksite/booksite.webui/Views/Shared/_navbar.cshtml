<div class="navbar bg-light navbar-dark navbar-expand-sm">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="~/img/logo.png" width="100" height="100" class="d-inline-block align-top" alt="">
            <a href="/" class="navbar-brand text-dark">Booksite</a>
        </a>
        <form action="/search" class="form-inline input-group ml-4">
            <input name="q" class="form-control col-xs-4 mr-5" type="search" placeholder="Book Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0 mr-5 ml-0" type="submit">Search</button>
        </form>
        <ul class="navbar-nav ml-auto ">

            @if(User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a href="/account/profile" class="nav-link text-dark">
                        @User.Identity.Name 
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/account/logout"class="nav-link text-dark">Logout</a>
                </li>
            }
            else{
                <li class="nav-item">
                    <a href="/account/Login"class="btn btn-outline-success mr-2">Login</a>
                </li>
                <li class="nav-item">
                    <a href="/account/Register" class="btn btn-outline-success">Register</a>
                </li>
            }
        </ul>
    </div>
</div>


