@model BookListViewModel

<div class="row">
    <div class="col-md-12">
            <h1 class="h3">Admin Authors</h1>
        <hr>
        
        <a class="btn btn-primary" href="/admin/authors/create">Add Author</a>
        <table class="table table-bordered mt-3">
            <thead class="bg-secondary">
                <tr>
                    <td style="width:30px;">Id</td>
                    <td style="width:100px;">ImageUrl</td>
                    <td style="width:100px;">Name LastName</td>
                    <td style="width:30px;">Description</td>
                    <td style="width:140px;">Action</td>
                </tr>
            </thead>
            <tbody class="bg-light">
                @if(Model.Authors.Count>0)
                {
                @foreach (var item in Model.Authors)
                    {
                    <tr>
                        <td>@item.AuthorId</td>
                        <td><img src="~/img/@item.ImageUrl" width="120"></td>
                        <td>@item.NameLastName</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="/admin/authors/@item.AuthorId" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <form action="/admin/deleteauthor" method="POST" style="display: inline-block;">
                                <input type="hidden" name="AuthorId" value="@item.AuthorId">
                            <button type="submit" onclick="return confirm('@item.NameLastName Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr> 
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Authors</h3>
                    </div>

                }
                
            </tbody>
        </table>
    </div>

</div>