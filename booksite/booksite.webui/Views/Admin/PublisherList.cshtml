@model BookListViewModel

<div class="row">
    <div class="col-md-12">
            <h1 class="h3">Admin Publishers</h1>
        <hr>
        
        <a class="btn btn-primary" href="/admin/publishers/create">Add Publisher</a>
        <table class="table table-bordered mt-3">
            <thead class="bg-secondary">
                <tr>
                    <td style="width:30px;">Id</td>
                    <td>Name</td>
                    <td style="width:140px;">Action</td>
                </tr>
            </thead>
            <tbody class="bg-light">
                @if(Model.Publishers.Count>0)
                {
                @foreach (var item in Model.Publishers)
                    {
                    <tr>
                        <td>@item.PublisherId</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/admin/publishers/@item.PublisherId" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <form action="/admin/deletepublisher" method="POST" style="display: inline-block;">
                                <input type="hidden" name="PublisherId" value="@item.PublisherId">
                            <button type="submit" onclick="return confirm('@item.Name Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr> 
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Publishers</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>