@model Book
<form method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" value="@Model.Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
        <span asp-validation-for="ImageUrl" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="BarcodeNumber">BarcodeNumber</label>
        <input asp-for="BarcodeNumber" value="@Model.BarcodeNumber" class="form-control">
        <span asp-validation-for="BarcodeNumber" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="PageCount">PageCount</label>
        <input asp-for="PageCount" value="@Model.PageCount" class="form-control">
        <span asp-validation-for="PageCount" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="FirstPrintDate">FirstPrintDate</label>
        <input asp-for="FirstPrintDate" value="@Model.FirstPrintDate" class="form-control">
        <span asp-validation-for="FirstPrintDate" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>