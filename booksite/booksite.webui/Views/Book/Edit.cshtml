@model Book
<form method="POST">
    <input type="hidden" name="BookId" value="@Model.BookId"/>
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control">
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" value="@Model.Description" class="form-control">
    </div>
    <div class="form-group">
        <label for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control">
    </div>
    <div class="form-group">
        <label for="BarcodeNumber">BarcodeNumber</label>
        <input asp-for="BarcodeNumber" value="@Model.BarcodeNumber" class="form-control">
    </div>
    <div class="form-group">
        <label for="PageCount">PageCount</label>
        <input asp-for="PageCount" value="@Model.PageCount" class="form-control">
    </div>
    <div class="form-group">
        <label for="FirstPrintDate">FirstPrintDate</label>
        <input asp-for="FirstPrintDate" value="@Model.FirstPrintDate" class="form-control">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>